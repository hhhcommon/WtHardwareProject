<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dinglan_orange"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/head_left_btn"
            style="@style/LeftImageStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="消息中心"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/activity_head_center_s" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lin_system"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/person_color"

            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:src="@mipmap/system_center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="系统"
                android:textColor="@color/black"
                android:textSize="@dimen/activity_head_center_s" />

            <TextView
                android:id="@+id/tv_system"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/circle_red_background"
                android:gravity="center"
                android:text="15"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@mipmap/live_more" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/app_bg" />

        <LinearLayout
            android:id="@+id/lin_subscribe"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_gravity="center_horizontal"

            android:background="@drawable/person_color"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:src="@mipmap/subscribe_center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="订阅"
                android:textColor="@color/black"
                android:textSize="@dimen/activity_head_center_s" />

            <TextView
                android:id="@+id/tv_subscribe"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/circle_red_background"
                android:gravity="center"
                android:text="15"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@mipmap/live_more" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/app_bg" />

        <LinearLayout
            android:id="@+id/lin_group_messageN"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_gravity="center_horizontal"

            android:background="@drawable/person_color"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:src="@mipmap/group_center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="通知"
                android:textColor="@color/black"
                android:textSize="@dimen/activity_head_center_s" />

            <TextView
                android:id="@+id/tv_group_messageN"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/circle_red_background"
                android:gravity="center"
                android:text="15"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@mipmap/live_more" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/text_line_1" />

        <LinearLayout
            android:id="@+id/lin_group_messageR"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/person_color"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:src="@mipmap/group_center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:text="群申请"
                android:textColor="@color/black"
                android:textSize="@dimen/activity_head_center_s" />

            <TextView
                android:id="@+id/tv_group_messageR"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/circle_red_background"
                android:gravity="center"
                android:text="15"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@mipmap/live_more" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>