<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dinglan_orange"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <ImageView
            android:id="@+id/head_left_btn"
            style="@style/LeftImageStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑群组资料"
            android:layout_centerInParent="true"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/activity_head_center_s" />
        <TextView
            android:id="@+id/lin_head_right"
            style="@style/RightMoreStyle"
            android:text="确定"
            android:gravity="center"
            android:layout_alignTop="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fengexian"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/rl_group_manager"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:visibility="visible"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:gravity="left|center"
                android:text="群头像"
                android:textColor="@color/beijing"
                android:layout_marginRight="10dp"
                android:textSize="14sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

            </RelativeLayout>

            <ImageView
                android:id="@+id/img_zhezhao"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:scaleType="centerCrop"
                android:layout_alignTop="@+id/img_zhezhao"
                android:layout_alignLeft="@+id/img_zhezhao"
                android:layout_alignStart="@+id/img_zhezhao" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_group_introduce"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="1dp"
            android:visibility="visible"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:gravity="left|center"
                android:text="群    名"
                android:textColor="@color/beijing"
                android:textSize="14sp"
                android:id="@+id/textView8" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/beijing"
                android:textSize="14sp"
                android:text="dadasdadasdasda"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView8"
                android:layout_toEndOf="@+id/textView8" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_set_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:visibility="visible"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingLeft="10dp"
                android:gravity="left|center"
                android:paddingBottom="15dp"
                android:text="群签名"
                android:textColor="@color/beijing"
                android:textSize="14sp"
                android:id="@+id/textView7" />

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/beijing"
               android:textSize="14sp"
               android:text="dadasdadasdasda"
               android:paddingBottom="15dp"
               android:paddingTop="15dp"
               android:layout_marginRight="15dp"
               android:layout_centerVertical="true"
               android:layout_toRightOf="@+id/textView7"
               android:layout_toEndOf="@+id/textView7" />

        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/rl_modify_password"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:gravity="left|center"
                android:text="修改群密码"
                android:textColor="@color/beijing"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/img_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center"
                android:layout_marginRight="10dp"
                android:src="@mipmap/live_more"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_addGroup"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:gravity="left|center"
                android:text="加群消息"
                android:textColor="@color/beijing"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center"
                android:layout_marginRight="10dp"
                android:src="@mipmap/live_more"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_verify_group"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:text="审核消息"
                android:textColor="@color/beijing"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center"
                android:layout_marginRight="10dp"
                android:src="@mipmap/live_more"/>



        </RelativeLayout>

    </LinearLayout>



</LinearLayout>