<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dinglan_orange"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include android:id="@+id/include_title" layout="@layout/base_activity_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/app_logo"/>

        <TextView
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="快速注册"
            android:textSize="14sp"
            android:layout_below="@id/image_logo"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:textColor="@color/wt_login_third"
            android:layout_marginTop="36dp"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/linear_user_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/image_logo"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="36dp"
            android:layout_toLeftOf="@id/btn_register"
            android:background="@drawable/bg_edittext_normal"
            android:gravity="center"
            android:padding="5dip">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="19dp"
                android:src="@mipmap/img_username"/>

            <EditText
                android:id="@+id/edittext_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/WHITE"
                android:hint="手机号/用户名"
                android:singleLine="true"
                android:textColor="@color/wt_login_third"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/wt_edittext_cursor"
                android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_wjmm"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="忘记密码"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:textColor="@color/wt_login_third"
            android:layout_below="@id/linear_user_name"
            android:layout_marginTop="15dp"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/linear_user_pas"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/linear_user_name"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@id/tv_wjmm"
            android:background="@drawable/bg_edittext_normal"
            android:gravity="center"
            android:padding="5dip">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="19dp"
                android:src="@mipmap/img_password"/>

            <EditText
                android:id="@+id/edittext_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/WHITE"
                android:hint="密码"
                android:password="true"
                android:singleLine="true"
                android:textColor="@color/wt_login_third"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/wt_edittext_cursor"
                android:textSize="14sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/zhuxiao_press"
            android:layout_below="@id/linear_user_pas"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/WHITE"
            android:textSize="15sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/btn_login"
            android:layout_marginBottom="26dp"
            android:gravity="bottom"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:background="@color/wt_login_third" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="第三方登录"
                    android:textColor="@color/wt_login_third"
                    android:textSize="@dimen/wt_login_third_title" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:background="@color/wt_login_third" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/lin_login_wx"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/img_loginwx" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="微信登录"
                        android:textColor="@color/group_item_text2"
                        android:textSize="@dimen/wt_login_third_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_login_qq"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/img_loginqq" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="QQ登录"
                        android:textColor="@color/group_item_text2"
                        android:textSize="@dimen/wt_login_third_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_login_wb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/img_loginwb" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="微博登录"
                        android:textColor="@color/group_item_text2"
                        android:textSize="@dimen/wt_login_third_text" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>