<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dinglan_orange"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <ImageView
            android:id="@+id/head_left_btn"
            style="@style/LeftImageStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索结果"
            android:layout_centerInParent="true"
            android:textColor="@color/WHITE_1"
            android:textSize="@dimen/activity_head_center_s" />

    </RelativeLayout>

    <com.wotingfm.widget.TipView
        android:id="@+id/tip_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <com.wotingfm.widget.xlistview.XListView
        android:id="@+id/listview_querycontact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/text_line_1"
        android:dividerHeight="0.5dp"
        android:background="@color/WHITE_1"
        android:scrollbars="none" />

</LinearLayout>