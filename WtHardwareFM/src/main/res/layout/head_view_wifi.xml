<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/wifi_set"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:clickable="true"
        android:background="@drawable/person_color">

        <ImageView
            android:id="@+id/image_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/text_wifi_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WiFi"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@id/image_wifi"
            android:textSize="16sp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/image_wifi_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wt_person_close"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_color"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/user_wifi_list"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/linkman_bt"
        android:text="可用WiFi列表"
        android:gravity="center_vertical"
        android:paddingLeft="14dp"/>

</LinearLayout>