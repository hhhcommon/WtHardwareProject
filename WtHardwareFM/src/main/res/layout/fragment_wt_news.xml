<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dinglan_orange"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/head_left_btn"
            style="@style/LeftImageStyle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center_vertical" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/tv_guid1"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:text="推荐"
                    android:background="@drawable/color_wt_circle_home_white"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/dinglan_orange" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:gravity="center" >

                <TextView
                    android:id="@+id/tv_guid2"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:text="电台"
                    android:background="@drawable/color_wt_circle_orange"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/tv_guid3"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:gravity="center"
                    android:background="@drawable/color_wt_circle_orange"

                    android:text="分类"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/white" />
            </LinearLayout>
            <ImageView
                android:visibility="invisible"
                style="@style/LeftImageStyle"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/cursor"
            android:layout_width="38dp"
            android:layout_height="2dp"
            android:scaleType="matrix"
            android:src="@mipmap/left_personal_bg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@color/text_line_1" />

    </LinearLayout>
    <android.support.v4.view.ViewPager  
        android:id="@+id/viewpager"  
          android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/WHITE"
        android:persistentDrawingCache="animation"/>

</LinearLayout>