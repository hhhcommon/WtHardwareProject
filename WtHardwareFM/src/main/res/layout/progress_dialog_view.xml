<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_pro_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/wt_image_progress_dialog_background"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignLeft="@id/image_pro_back"
        android:layout_alignRight="@id/image_pro_back"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在上传"
            android:textSize="14sp"
            android:textColor="@color/WHITE"/>

        <ProgressBar
            android:id="@+id/pb_progressbar"
            style="@style/StyleProgressBarMini"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/wt_image_progress"
            android:max="100"
            android:progress="0"
            android:padding="2dp"
            android:layout_margin="10dp"/>

    </LinearLayout>

</RelativeLayout>