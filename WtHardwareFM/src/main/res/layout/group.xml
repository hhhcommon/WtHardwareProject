<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BaseStyle"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/wt_back"
            style="@style/LeftImageStyle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="详细资料"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/activity_head_center_s"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/WHITE"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:paddingTop="12dp"
                android:visibility="visible"
                android:background="@color/dinglan_orange">

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@mipmap/xiugai"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/imageView3" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="38dp"
                    android:src="@mipmap/addgroup_talk"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:id="@+id/imageView4" />

                <RelativeLayout
                    android:id="@+id/rv_touxiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imageView3"
                    android:layout_toEndOf="@+id/imageView3"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="25dp"
                    >

                    <ImageView
                        android:id="@+id/image_portrait"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:id="@+id/head_frame"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/liubianxing_orange" />

                </RelativeLayout>

                <EditText
                    android:id="@+id/et_b_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:ems="10"
                    android:gravity="center"
                    android:text="我听科技"
                    android:textColor="@color/WHITE"
                    android:enabled="false"
                    android:background="@color/dinglan_orange"
                    android:maxWidth="200dp"
                    android:textSize="13sp"
                    android:layout_alignTop="@+id/rv_touxiang"
                    android:layout_toRightOf="@+id/rv_touxiang"
                    android:layout_toEndOf="@+id/rv_touxiang" />

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="群号:100001"
                    android:textColor="@color/WHITE"
                    android:textSize="12sp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:layout_above="@+id/et_groupSignature"
                    android:layout_alignLeft="@+id/et_groupSignature"
                    android:layout_alignStart="@+id/et_groupSignature" />

                <EditText
                    android:id="@+id/et_groupSignature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/dinglan_orange"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:ems="10"
                    android:gravity="center"
                    android:enabled="false"
                    android:maxWidth="240dp"
                    android:text="不忘初心，方得始终"
                    android:textColor="@color/WHITE"
                    android:textSize="12sp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignBottom="@+id/rv_touxiang"
                    android:layout_alignRight="@+id/et_b_name"
                    android:layout_alignEnd="@+id/et_b_name" />



            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray"/>

            <RelativeLayout
                android:id="@+id/linear_channel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/WHITE">

                <TextView
                    android:id="@+id/beiyongpindao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="备用频道"
                    android:textColor="@color/beijing"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_pinlvxuanze"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择频率"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/dinglan_orange"
                    />

                <TextView
                    android:id="@+id/text_channel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:text="设备备用频道1: "
                    android:textColor="@color/beijing"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/text_channel_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="30dp"
                    android:visibility="visible"
                    android:hint="尚未选择对讲频道"
                    android:layout_toRightOf="@id/text_channel1"/>

                <TextView
                    android:id="@+id/tv_channel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="7dp"
                    android:visibility="visible"
                    android:layout_toRightOf="@id/text_channel1"
                    />

                <TextView
                    android:id="@+id/text_channel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_channel1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="17dp"
                    android:text="设备备用频道2: "
                    android:textColor="@color/beijing"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/text_channel_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:hint="尚未选择对讲频道"
                    android:layout_alignTop="@+id/text_channel2"
                    android:layout_toRightOf="@+id/text_channel2"
                    android:layout_toEndOf="@+id/text_channel2" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray_z"/>

            <RelativeLayout
                android:id="@+id/rl_allperson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/WHITE">
                <TextView
                    android:id="@+id/tv_allperson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:text="全部成员"
                    android:textColor="@color/beijing"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/tv_allperson"
                    android:layout_toRightOf="@+id/tv_allperson"
                    android:text="（0）"
                    android:textColor="@color/beijing"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/live_more"/>

            </RelativeLayout>



            <com.wotingfm.widget.MyGridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/WHITE"
                android:horizontalSpacing="10dp"
                android:numColumns="4"
                android:paddingBottom="10dp"
                android:scrollbars="none"
                android:verticalSpacing="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/auto_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext_normal"
                    android:gravity="center"
                    android:text="自动添加"/>

                <TextView
                    android:id="@+id/ewm_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_edittext_normal"
                    android:gravity="center"
                    android:text="扫码添加"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray_z"/>

            <RelativeLayout
                android:id="@+id/rl_transferauthority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:text="移交管理员权限"
                    android:textColor="@color/beijing"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/live_more"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/gray_z"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_modifygpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:text="修改群密码"
                    android:textColor="@color/beijing"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/img_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/live_more"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/gray_z"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_addGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:text="加群消息"
                    android:textColor="@color/beijing"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/live_more"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/gray_z"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_vertiygroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="15dp"
                    android:text="审核消息"
                    android:textColor="@color/beijing"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/live_more"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/gray_z"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/lin_ewm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="二维码"
                    android:textColor="@color/beijing"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/img_ewm"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ewm"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray_z"/>

            <Button
                android:id="@+id/text_exit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/wt_commit_button_background"
                android:text="退出群组"
                android:textColor="@color/WHITE"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>