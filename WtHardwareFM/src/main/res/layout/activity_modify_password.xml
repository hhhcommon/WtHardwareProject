<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dinglan_orange"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include android:id="@+id/include_title" layout="@layout/base_activity_title" />

    <LinearLayout
        android:id="@+id/lin_reset_password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_edittext_normal"
                android:gravity="left|center"
                android:orientation="horizontal"
                android:padding="5dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="45dp"
                    android:text="新密码"
                    android:textColor="@color/wt_login_third"
                    android:textSize="@dimen/activity_head_right" />

                <EditText
                    android:id="@+id/edit_newpassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/WHITE"
                    android:ems="10"
                    android:gravity="left|center"
                    android:hint="请输入6-10位数字或字母"
                    android:maxLines="1"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/wt_login_third"
                    android:textColorHint="@color/beijing"
                    android:textCursorDrawable="@drawable/wt_edittext_cursor"
                    android:textSize="@dimen/activity_head_right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_edittext_normal"
                android:gravity="left|center"
                android:orientation="horizontal"
                android:padding="5dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="30dp"
                    android:text="确认密码"
                    android:textColor="@color/wt_login_third"
                    android:textSize="@dimen/activity_head_right" />

                <EditText
                    android:id="@+id/edit_confirmpassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/WHITE"
                    android:ems="10"
                    android:gravity="left|center"
                    android:hint="请再次输入密码"
                    android:maxLines="1"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/wt_login_third"
                    android:textColorHint="@color/beijing"
                    android:textCursorDrawable="@drawable/wt_edittext_cursor"
                    android:textSize="@dimen/activity_head_right" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/wt_login_third"
                    android:text="选择一种验证方式"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:background="@color/wt_login_third"/>

                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/wt_login_third"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lin_oldpassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_edittext_normal"
                android:gravity="left|center"
                android:orientation="horizontal"
                android:padding="5dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="45dp"
                    android:text="旧密码"
                    android:textColor="@color/wt_login_third"
                    android:textSize="@dimen/activity_head_right" />

                <EditText
                    android:id="@+id/edit_oldpassword"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/WHITE"
                    android:ems="10"
                    android:gravity="left|center"
                    android:hint="请输入当前密码"
                    android:maxLines="1"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/wt_login_third"
                    android:textColorHint="@color/beijing"
                    android:textCursorDrawable="@drawable/wt_edittext_cursor"
                    android:textSize="@dimen/activity_head_right" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="或者"
                android:textSize="16sp"
                android:textColor="@color/wt_login_third"
                android:layout_marginTop="10dp"
                android:gravity="center"/>

            <RelativeLayout
                android:id="@+id/lin_yzm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edittext_normal">

                <TextView
                    android:id="@+id/text_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="45dp"
                    android:text="验证码"
                    android:layout_centerVertical="true"
                    android:textColor="@color/wt_login_third"
                    android:textSize="@dimen/activity_head_right" />

                <EditText
                    android:id="@+id/edit_yzm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/WHITE"
                    android:hint="请输入验证码"
                    android:singleLine="true"
                    android:maxLength="6"
                    android:inputType="number"
                    android:layout_toRightOf="@id/text_code"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@color/wt_login_third"
                    android:textColorHint="@color/beijing"
                    android:textCursorDrawable="@drawable/wt_edittext_cursor"
                    android:textSize="@dimen/activity_head_right" />

                <TextView
                    android:id="@+id/tv_getyzm"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/et_bg_yanzhengma"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="获取验证码"
                    android:textColor="@color/WHITE"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_cxfasong"
                    android:layout_width="79dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_alignParentRight="true"
                    android:text="重新发送"
                    android:textColor="@color/gray"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@id/tv_cxfasong"
                    android:background="@color/gray_z" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/btn_modifypassword"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/zhuxiao_press"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/activity_head_right" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>