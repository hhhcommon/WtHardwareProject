<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:paddingTop="12dp"
        android:visibility="visible"
        android:background="@color/dinglan_orange">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/xiugai"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView3" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/addgroup_talk"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/imageView4" />

        <RelativeLayout
            android:id="@+id/rv_touxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="15dp"
            >

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@mipmap/liubianxing_orange"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
              />

            <ImageView
                android:id="@+id/image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>



        <EditText
            android:id="@+id/et_b_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:ems="10"
            android:gravity="center"
            android:text="我听科技"
            android:textColor="@color/WHITE"
            android:enabled="false"
            android:background="@color/dinglan_orange"
            android:maxWidth="200dp"
            android:textSize="14sp"
            android:layout_alignTop="@+id/rv_touxiang"
            android:layout_toRightOf="@+id/rv_touxiang"
            android:layout_toEndOf="@+id/rv_touxiang" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID:100001"
            android:textColor="@color/WHITE"
            android:textSize="12sp"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/et_groupSignature"
            android:layout_alignLeft="@+id/et_groupSignature"
            android:layout_alignStart="@+id/et_groupSignature" />

        <EditText
            android:id="@+id/et_groupSignature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/dinglan_orange"
            android:ellipsize="end"
            android:singleLine="true"
            android:ems="10"
            android:gravity="center"
            android:enabled="false"
            android:maxWidth="240dp"
            android:text="不忘初心，方得始终"
            android:textColor="@color/WHITE"
            android:textSize="12sp"
            android:layout_alignBottom="@+id/rv_touxiang"
            android:layout_alignRight="@+id/et_b_name"
            android:layout_alignEnd="@+id/et_b_name" />



    </RelativeLayout>

</LinearLayout>
