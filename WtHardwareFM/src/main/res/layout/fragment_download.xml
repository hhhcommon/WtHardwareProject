<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/WHITE"
      android:orientation="vertical">

    <include android:id="@+id/include_title" layout="@layout/base_activity_title"/>

    <LinearLayout
        android:id="@+id/down_linear"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/include_title">

        <TextView
            android:id="@+id/tv_completed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/dinglan_orange_light"
            android:text="已下载"
            android:textSize="15sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dinglan_orange"/>

        <TextView
            android:id="@+id/tv_uncompleted"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="下载中"
            android:textSize="15sp"/>

    </LinearLayout>

    <View
        android:id="@+id/linear_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dinglan_orange"
        android:layout_below="@id/down_linear"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:flipInterval="30"
        android:layout_below="@id/linear_view"
        android:layout_above="@+id/text_memory"
        android:persistentDrawingCache="animation"/>

    <TextView
        android:id="@+id/text_memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="已用10Mb/剩余1.9G"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>