<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dinglan_orange"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/dinglan_orange">

        <LinearLayout
            android:id="@+id/lin_news"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:src="@mipmap/back_images" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_xiugai"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="编辑"
                android:textColor="@color/WHITE"
                android:textSize="15sp"
                android:gravity="center"
                android:visibility="gone"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/tv_completed"
                android:layout_width="81dp"
                android:layout_height="28dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/color_wt_circle_home_white"
                android:gravity="center"
                android:text="已下载"
                android:textColor="@color/dinglan_orange"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_uncompleted"
                android:layout_width="81dp"
                android:layout_height="28dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/color_wt_circle_orange"
                android:gravity="center"
                android:text="下载中"
                android:textColor="@color/WHITE"
                android:textSize="15sp"/>

        </LinearLayout>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/WHITE"
        android:flipInterval="30"
        android:persistentDrawingCache="animation"/>

</LinearLayout>