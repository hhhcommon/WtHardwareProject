<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BaseStyle"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <ImageView
            android:id="@+id/head_left_btn"
            style="@style/LeftImageStyle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细资料"
            android:layout_centerInParent="true"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/activity_head_center_s" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/WHITE">

        <RelativeLayout
            android:id="@+id/image_touxiang"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >
            <ImageView
                android:id="@+id/image_portrait"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/wt_image_playertx"/>
            <ImageView
                android:id="@+id/head_frame"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/wt_6_b_y_b" />

        </RelativeLayout>

        <TextView
            android:id="@+id/image_add"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_edittext_normal"
            android:gravity="center"
            android:text="对讲"
            android:textSize="@dimen/activity_head_right"/>

        <ImageView
            android:id="@+id/image_xiugai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image_add"
            android:layout_toLeftOf="@id/image_add"
            android:layout_marginRight="5dp"
            android:src="@mipmap/wt_group_sign"/>

        <LinearLayout
            android:id="@+id/linear_edit"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/image_xiugai"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/image_touxiang"
            android:layout_alignTop="@id/image_touxiang"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_b_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:background="@color/transparent"
                android:ellipsize="end"
                android:ems="10"
                android:maxLines="2"
                android:enabled="false"
                android:text="我听科技"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/et_groupSignature"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="不忘初心，方得始终。"
                android:enabled="false"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WHITE"
        android:orientation="vertical" >

        <Button
            android:id="@+id/tv_delete"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/wt_commit_button_background"
            android:text="删除好友"
            android:textColor="@color/WHITE"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/tv_delete"
            android:background="@color/umeng_socialize_ucenter_bg"
            android:layout_marginBottom="50dp">

            <View
                android:id="@+id/view_1"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/BLACK"/>

            <TextView
                android:id="@+id/lin_ewm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="二维码"
                android:textColor="@color/BLACK"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView_ewm"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"/>

            <View
                android:id="@+id/view_2"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/BLACK"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>