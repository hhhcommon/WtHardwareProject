<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dinglan_orange"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/head_left_btn"
            style="@style/LeftImageStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_centerInParent="true"
            android:text="详细资料"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/activity_head_center_s" />

        <TextView
            android:id="@+id/lin_head_right"
            style="@style/RightMoreStyle"
            android:text="更多"
            android:gravity="center"
            android:layout_alignTop="@+id/textView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <com.wotingfm.widget.TipView
        android:id="@+id/tip_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/dinglan_orange"
            android:paddingTop="12dp"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/rv_touxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="15dp"
                >
                <ImageView
                    android:id="@+id/image_portrait"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:id="@+id/head_frame"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@mipmap/liubianxing_orange"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@mipmap/xiugai"
                android:layout_below="@+id/tv_name"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:maxWidth="200dp"
                android:paddingRight="30dp"
                android:text="群号:100001"
                android:layout_marginTop="3dp"
                android:textColor="@color/WHITE"
                android:textSize="12sp"
                android:layout_below="@+id/tv_name"
                android:layout_toRightOf="@+id/rv_touxiang"
                android:layout_toEndOf="@+id/rv_touxiang" />

            <EditText
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/dinglan_orange"
                android:ellipsize="end"
                android:ems="10"
                android:enabled="false"
                android:gravity="left"
                android:maxWidth="200dp"
                android:singleLine="true"
                android:text="我听科技"
                android:textColor="@color/WHITE"
                android:textSize="14sp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/rv_touxiang"
                android:layout_toEndOf="@+id/rv_touxiang" />

            <EditText
                android:id="@+id/et_b_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/dinglan_orange"
                android:enabled="false"
                android:gravity="left"
                android:maxWidth="200dp"
                android:paddingRight="30dp"
                android:text="群名称"
                android:textColor="@color/WHITE"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:layout_below="@+id/tv_id"
                android:layout_toRightOf="@+id/rv_touxiang"
                android:layout_toEndOf="@+id/rv_touxiang" />

            <EditText
                android:id="@+id/et_groupSignature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/dinglan_orange"
                android:ellipsize="end"
                android:ems="10"
                android:enabled="false"
                android:gravity="left"
                android:maxWidth="300dp"
                android:singleLine="true"
                android:text="不忘初心，方得始终"
                android:textColor="@color/WHITE"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:layout_below="@+id/et_b_name"
                android:layout_toRightOf="@+id/rv_touxiang"
                android:layout_toEndOf="@+id/rv_touxiang" />


        </RelativeLayout>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/white"
            android:gravity="bottom"
            >
            <RelativeLayout
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/wt_commit_button_background">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/addgroup_talk"
                    android:id="@+id/imageView2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="100dp"
                    android:layout_marginStart="119dp"
                    android:padding="5dp"
                    />

                <TextView
                    android:id="@+id/text_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="开始聊天"
                    android:textColor="@color/WHITE"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:layout_toRightOf="@+id/imageView2"
                    android:layout_toEndOf="@+id/imageView2" />

            </RelativeLayout>
        </LinearLayout>
</LinearLayout>