<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BaseStyle"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/dinglan_orange"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/head_left_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="返回"
            android:textColor="@color/WHITE"
            android:textSize="15sp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_dinglan_edittext"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="20dp"
            android:gravity="left|center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:src="@mipmap/wt_image_search_gray" />

            <EditText
                android:id="@+id/et_news"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:hint="昵称/手机号"
                android:singleLine="true"
                android:textColor="@color/wt_login_third"
                android:textColorHint="@color/beijing"
                android:textSize="@dimen/wt_button_default_text" />

            <ImageView
                android:id="@+id/img_voice_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="11dp"
                android:src="@mipmap/wt_image_voice"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:src="@mipmap/wt_image_clear"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WHITE_1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_saoyisao"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/WHITE"
            android:visibility="visible">

            <ImageView
                android:id="@+id/rank_image_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="13dp"
                android:src="@mipmap/wt_image_saoyisao" />

            <TextView
                android:id="@+id/rank_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫一扫"
                android:textColor="@color/dinglan_orange"
                android:textSize="@dimen/wt_button_default_text"
                android:layout_toRightOf="@id/rank_image_url"
                android:layout_alignTop="@id/rank_image_url"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="扫描二维码名片"
                android:textColor="@color/beijing"
                android:textSize="@dimen/wt_login_text_wjmm"
                android:layout_toRightOf="@id/rank_image_url"
                android:layout_alignBottom="@id/rank_image_url"
                android:layout_marginBottom="5dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/wt_image_right"
                android:layout_marginRight="19dp"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin_contact_search"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/wt_person_color"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:paddingLeft="18dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/wt_image_search_find" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="搜索："
                android:textColor="@color/dinglan_orange"
                android:textSize="@dimen/wt_button_default_text" />

            <TextView
                android:id="@+id/text_search"
                android:layout_width="0dp"
                android:layout_height="35dip"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="AGUIFHSDIOSDH"
                android:textColor="@color/dinglan_orange"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_color" />

    </LinearLayout>

</LinearLayout>
