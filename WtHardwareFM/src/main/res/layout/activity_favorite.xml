<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BaseStyle"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wt_dinglan_high" >

        <ImageView
            android:id="@+id/head_left_btn"
            style="@style/LeftImageStyle" />

        <TextView
            android:id="@+id/head_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我喜欢的"
            android:layout_centerInParent="true"
            android:textColor="@color/WHITE_1"
            android:textSize="@dimen/wt_dinglan_text_center" />

        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" >

            <TextView
                android:id="@+id/tv_qingkong"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="清空"
                android:textColor="@color/WHITE_1"
                android:visibility="gone"
                android:textSize="@dimen/wt_dinglan_text_right" />

            <TextView
                android:id="@+id/tv_bianji"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="编辑"
                android:textColor="@color/WHITE_1"
                android:textSize="@dimen/wt_dinglan_text_right"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/WHITE"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp" >

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="全部"
                android:textColor="@color/dinglan_orange"
                android:textSize="@dimen/wt_edittext_default_text" />

            <TextView
                android:id="@+id/tv_sequ"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="专辑"
                android:textColor="@color/group_item_text2"
                android:textSize="@dimen/wt_edittext_default_text" />

            <TextView
                android:id="@+id/tv_sound"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="声音"
                android:textColor="@color/group_item_text2"
                android:textSize="@dimen/wt_edittext_default_text" />

            <TextView
                android:id="@+id/tv_radio"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="电台"
                android:textColor="@color/group_item_text2"
                android:textSize="@dimen/wt_edittext_default_text" />

            <TextView
                android:id="@+id/tv_tts"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="TTS"
                android:textColor="@color/group_item_text2"
                android:textSize="@dimen/wt_edittext_default_text" />

        </LinearLayout>

        <ImageView
            android:id="@+id/cursor"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:scaleType="matrix"
            android:src="@mipmap/left_personal_bg" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_line_1" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        android:persistentDrawingCache="animation" />

</LinearLayout>