<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dinglan_orange"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include android:id="@+id/include_title" layout="@layout/base_activity_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        android:orientation="vertical"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="新  号  码"/>

            <EditText
                android:id="@+id/edit_phone_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_edittext_normal"
                android:hint="请输入新的手机号"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:maxLength="18"
                android:inputType="phone"
                android:singleLine="true"
                android:textColor="@color/wt_login_third"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/wt_edittext_cursor"
                android:textSize="14sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/text_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="验  证  码"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_verification_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_edittext_normal"
                android:layout_toRightOf="@id/text_code"
                android:hint="请输入验证码"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:inputType="phone"
                android:singleLine="true"
                android:maxLength="6"
                android:textColor="@color/wt_login_third"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/wt_edittext_cursor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_get_verification_code"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="获取验证码"
                android:textColor="@color/WHITE"
                android:textSize="12sp"
                android:background="@drawable/et_bg_yanzhengma"
                android:visibility="visible" />

            <TextView
                android:id="@+id/text_resend"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="2dp"
                android:layout_alignParentRight="true"
                android:text="重新发送"
                android:textColor="@color/gray"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/text_resend"
                android:background="@color/gray_z" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_graybutton"
            android:text="确定"
            android:textColor="@color/WHITE"
            android:layout_marginTop="30dp"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>
