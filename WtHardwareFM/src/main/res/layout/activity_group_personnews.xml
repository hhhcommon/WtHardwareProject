<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dinglan_orange"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <ImageView
            android:id="@+id/head_left_btn"
            style="@style/LeftImageStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细资料"
            android:layout_centerInParent="true"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/activity_head_center_s" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/dinglan_orange"
                android:paddingTop="12dp"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/rv_touxiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="15dp"
                    >
                    <ImageView
                        android:id="@+id/image_portrait"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:scaleType="centerCrop"
                        android:layout_centerInParent="true"/>

                    <ImageView
                        android:id="@+id/head_frame"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@mipmap/liubianxing_orange"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@mipmap/xiugai"
                    android:layout_below="@+id/tv_name"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    />

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:maxWidth="200dp"
                    android:paddingRight="30dp"
                    android:text="群号:100001"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/WHITE"
                    android:textSize="12sp"
                    android:layout_below="@+id/tv_name"
                    android:layout_toRightOf="@+id/rv_touxiang"
                    android:layout_toEndOf="@+id/rv_touxiang"
                    android:visibility="visible"
                    />

                <EditText
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/dinglan_orange"
                    android:ellipsize="end"
                    android:ems="10"
                    android:enabled="false"
                    android:gravity="left"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:text="我听科技"
                    android:textColor="@color/WHITE"
                    android:textSize="14sp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/rv_touxiang"
                    android:layout_toEndOf="@+id/rv_touxiang" />

                <EditText
                    android:id="@+id/et_b_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/dinglan_orange"
                    android:enabled="false"
                    android:gravity="left"
                    android:maxWidth="200dp"
                    android:paddingRight="30dp"
                    android:text="群名称"
                    android:textColor="@color/WHITE"
                    android:textSize="12sp"
                    android:layout_alignBottom="@+id/imageView3"
                    android:layout_alignLeft="@+id/tv_name"
                    android:layout_alignStart="@+id/tv_name" />

               <!-- <EditText
                    android:id="@+id/et_groupSignature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/dinglan_orange"
                    android:ellipsize="end"
                    android:ems="10"
                    android:enabled="false"
                    android:gravity="left"
                    android:maxWidth="300dp"
                    android:singleLine="true"
                    android:text="不忘初心，方得始终"
                    android:textColor="@color/WHITE"
                    android:layout_marginTop="3dp"
                    android:textSize="12sp"
                    android:layout_below="@+id/et_b_name"
                    android:layout_toRightOf="@+id/rv_touxiang"
                    android:layout_toEndOf="@+id/rv_touxiang" />-->


            </RelativeLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/WHITE"
        android:orientation="vertical" >

             <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签名"
                    android:textColor="@color/group_4b"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:layout_marginRight="15dp"
                    android:visibility="visible" />


        <TextView
            android:id="@+id/et_groupSignature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签名"
            android:textColor="@color/gray"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"

            android:visibility="visible" />

              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:background="@color/fengexian"
                  />

	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="好友验证"
	                android:textColor="@color/group_4b"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
	                android:visibility="visible" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_edittext_gray"
                android:gravity="left|center"
                android:orientation="horizontal"
                android:padding="5dip"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                >


                <EditText
                    android:id="@+id/et_news"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/WHITE"
                    android:ellipsize="end"
                    android:ems="10"
                    android:hint="请输入验证信息"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:textColor="@color/beijing"
                    android:textColorHint="@color/gray"
                    android:textCursorDrawable="@drawable/wt_edittext_cursor"
                    android:textSize="@dimen/wt_login_text_wjmm"/>

                <LinearLayout
                    android:id="@+id/lin_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:src="@mipmap/wt_img_clearnew" />
                </LinearLayout>


        </LinearLayout>


    </LinearLayout>
        <TextView
            android:id="@+id/tv_add"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/zhuxiao_press"
            android:gravity="center"
            android:padding="8dp"
            android:text="添加对方为好友"
            android:textColor="@color/WHITE"
            android:textSize="15sp" />

    </LinearLayout>
</LinearLayout>