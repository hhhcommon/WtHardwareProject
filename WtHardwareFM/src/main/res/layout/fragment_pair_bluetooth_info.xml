<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/dinglan_orange">

        <ImageView
            android:id="@+id/image_left"
            style="@style/LeftImageStyle"/>

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已配对的设备"
            android:textColor="@color/WHITE"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_rename"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/WHITE">

        <TextView
            android:id="@+id/text_rename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/wt_login_third"
            android:text="重命名"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"/>

        <ImageView
            android:id="@+id/image_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wt_image_bluetooth_confirm_gray"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_marginRight="14dp"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/edit_rename"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/text_rename"
            android:layout_toLeftOf="@id/image_confirm"
            android:background="@color/WHITE"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_cancel"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/person_color">

        <ImageView
            android:id="@+id/image_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/wt_login_third"
            android:src="@mipmap/wt_image_bluetooth_cancel_pair"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"/>

        <TextView
            android:id="@+id/text_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_cancel"
            android:text="取消配对"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/wt_login_third"/>

    </RelativeLayout>

    <View
        android:id="@+id/view_null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>