<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/WHITE_1"
      android:gravity="center"
      android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_button_white">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="WiFi Name"
            android:singleLine="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/BLACK" />

        <TextView
            android:id="@+id/text_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态信息：已连接"
            android:textColor="@color/BLACK"
            android:layout_below="@id/text_title"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/text_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信号强度：强"
            android:textColor="@color/BLACK"
            android:layout_below="@id/text_state"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/text_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接速度：72Mbps"
            android:textColor="@color/BLACK"
            android:layout_below="@id/text_signal"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/text_security"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全性：WPA/WPA2 PSK"
            android:textColor="@color/BLACK"
            android:layout_below="@id/text_speed"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/text_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP地址：192.168.1.02"
            android:textColor="@color/BLACK"
            android:layout_below="@id/text_security"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="取消"
            android:layout_below="@id/text_ip"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:background="@drawable/background_button_gray"
            android:textColor="@color/BLACK" />

        <Button
            android:id="@+id/btn_not_save"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@id/text_ip"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp"
            android:textSize="18sp"
            android:background="@drawable/background_button_gray"
            android:layout_marginRight="20dp"
            android:text="不保存" />

        <TextView
            android:id="@+id/text_disconnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="断开WiFi连接"
            android:textColor="@color/game_blue_text_select"
            android:layout_below="@id/btn_not_save"
            android:layout_alignRight="@id/btn_not_save"
            android:layout_marginTop="7dp"
            android:textSize="14sp"/>

    </RelativeLayout>

</LinearLayout>