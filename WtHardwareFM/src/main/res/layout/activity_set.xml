<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BaseStyle"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/head_left_btn"
            style="@style/LeftImageStyle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/activity_head_center_s"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin_IsLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_bg"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <RelativeLayout
                    android:id="@+id/lin_id_name"
                    style="@style/PersonAndSetRelativeStyle">

                    <ImageView
                        android:id="@+id/img_id_name"
                        style="@style/PersonAndSetLeftStyle"
                        android:src="@mipmap/wt_image_set_user_num"/>

                    <TextView
                        style="@style/PersonAndSetTextStyle"
                        android:layout_toRightOf="@id/img_id_name"
                        android:text="用户号"/>

                    <ImageView style="@style/PersonAndSetRightStyle"/>

                    <View
                        style="@style/LineStyle"
                        android:layout_alignParentBottom="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lin_bindPhone"
                    style="@style/PersonAndSetRelativeStyle">

                    <ImageView
                        android:id="@+id/img_bindPhone"
                        style="@style/PersonAndSetLeftStyle"
                        android:src="@mipmap/wt_image_set_user_phone"/>

                    <TextView
                        style="@style/PersonAndSetTextStyle"
                        android:layout_toRightOf="@id/img_bindPhone"
                        android:text="绑定手机"/>

                    <ImageView style="@style/PersonAndSetRightStyle"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lin_reset_password"
                    style="@style/PersonAndSetRelativeStyle">

                    <View style="@style/LineStyle"/>

                    <ImageView
                        android:id="@+id/img_reset_password"
                        style="@style/PersonAndSetLeftStyle"
                        android:src="@mipmap/wt_person_modify"/>

                    <TextView
                        style="@style/PersonAndSetTextStyle"
                        android:layout_toRightOf="@id/img_reset_password"
                        android:text="重置密码"/>

                    <ImageView style="@style/PersonAndSetRightStyle"/>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/lin_downloadposition"
                style="@style/PersonAndSetRelativeStyle">

                <View style="@style/ViewStyle"/>

                <ImageView
                    android:id="@+id/image_position"
                    style="@style/PersonAndSetLeftStyle"
                    android:src="@mipmap/wt_person_download"/>

                <TextView
                    style="@style/PersonAndSetTextStyle"
                    android:layout_toRightOf="@id/image_position"
                    android:text="下载路径"/>

                <ImageView style="@style/PersonAndSetRightStyle"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lin_clear"
                style="@style/PersonAndSetRelativeStyle">

                <View style="@style/LineStyle"/>

                <ImageView
                    android:id="@+id/image_clear1"
                    style="@style/PersonAndSetLeftStyle"
                    android:src="@mipmap/wt_person_cache"/>

                <TextView
                    style="@style/PersonAndSetTextStyle"
                    android:layout_toRightOf="@id/image_clear1"
                    android:text="清除缓存"/>

                <ImageView
                    android:id="@+id/image_more"
                    style="@style/PersonAndSetRightStyle"/>

                <TextView
                    android:id="@+id/text_cache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/image_more"
                    android:text="0MB"
                    android:textColor="@color/beijing"
                    android:textSize="@dimen/text_size_13"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lin_update"
                style="@style/PersonAndSetRelativeStyle">

                <View style="@style/LineStyle"/>

                <ImageView
                    android:id="@+id/image_update"
                    style="@style/PersonAndSetLeftStyle"
                    android:src="@mipmap/wt_person_update"/>

                <TextView
                    style="@style/PersonAndSetTextStyle"
                    android:layout_toRightOf="@id/image_update"
                    android:text="检查更新"/>

                <ImageView style="@style/PersonAndSetRightStyle"/>

                <View
                    style="@style/ViewStyle"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lin_preference"
                style="@style/PersonAndSetRelativeStyle"
                android:layout_marginTop="20dp">

                <View style="@style/ViewStyle"/>

                <ImageView
                    android:id="@+id/image_preference"
                    style="@style/PersonAndSetLeftStyle"
                    android:src="@mipmap/wt_image_set_preference"/>

                <TextView
                    style="@style/PersonAndSetTextStyle"
                    android:layout_toRightOf="@id/image_preference"
                    android:text="偏好设置"/>

                <ImageView style="@style/PersonAndSetRightStyle"/>

                <View
                    style="@style/ViewStyle"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lin_help"
                style="@style/PersonAndSetRelativeStyle"
                android:layout_marginTop="20dp">

                <View style="@style/ViewStyle"/>

                <ImageView
                    android:id="@+id/image_help"
                    style="@style/PersonAndSetLeftStyle"
                    android:src="@mipmap/wt_person_help"/>

                <TextView
                    style="@style/PersonAndSetTextStyle"
                    android:layout_toRightOf="@id/image_help"
                    android:text="使用帮助"/>

                <ImageView style="@style/PersonAndSetRightStyle"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lin_feedback"
                style="@style/PersonAndSetRelativeStyle">

                <View style="@style/LineStyle"/>

                <ImageView
                    android:id="@+id/image_feedback"
                    style="@style/PersonAndSetLeftStyle"
                    android:src="@mipmap/wt_person_feedback"/>

                <TextView
                    style="@style/PersonAndSetTextStyle"
                    android:layout_toRightOf="@id/image_feedback"
                    android:text="反馈建议"/>

                <ImageView style="@style/PersonAndSetRightStyle"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lin_about"
                style="@style/PersonAndSetRelativeStyle">

                <View style="@style/LineStyle"/>

                <ImageView
                    android:id="@+id/image_about"
                    style="@style/PersonAndSetLeftStyle"
                    android:src="@mipmap/wt_person_aboutus"/>

                <TextView
                    style="@style/PersonAndSetTextStyle"
                    android:layout_toRightOf="@id/image_about"
                    android:text="关于我听"/>

                <ImageView style="@style/PersonAndSetRightStyle"/>

                <View
                    style="@style/ViewStyle"
                    android:layout_alignParentBottom="true"/>

            </RelativeLayout>

            <Button
                android:id="@+id/lin_zhuxiao"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/zhuxiao_press"
                android:text="注销登录"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/activity_head_right"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>