<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BaseStyle"
    android:orientation="vertical">

    <include layout="@layout/base_activity_title"/>

    <RelativeLayout
        android:id="@+id/relative_create_body"
        style="@style/MatchParent"
        android:background="@color/app_bg">

        <ImageView
            android:id="@+id/image_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/wt_image_create_group_default_head"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/liubianxing_gray"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/edit_group_name"
            android:hint="请输入要创建的群组名称"
            android:layout_alignTop="@+id/text_group_name"
            style="@style/CreateGroupTypeEdit"/>

        <ImageView
            android:id="@+id/text_group_name"
            android:text="群名称"
            android:layout_below="@id/image_head"
            android:src="@mipmap/wt_group_name"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/edit_group_autograph"
            android:hint="请输入群组的主要用途,如自驾游"
            android:layout_alignTop="@+id/text_group_autograph"
            style="@style/CreateGroupTypeEdit"/>

        <ImageView
            android:id="@+id/text_group_autograph"
            android:src="@mipmap/wt_group_sign"
            android:layout_below="@id/text_group_name"
             android:layout_width="25dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            />

        <EditText
            android:id="@+id/edit_group_password"
            android:hint="请输入至少6位的密码"
            android:layout_alignTop="@+id/text_group_password"
            style="@style/CreateGroupTypeEdit"
            android:inputType="textPassword"
            android:maxLength="18"/>

        <ImageView
            android:id="@+id/text_group_password"
            android:src="@mipmap/img_password"
            android:layout_below="@id/text_group_autograph"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/edit_group_verification"
            android:text="加群时需输入验证信息"
            android:layout_alignTop="@+id/text_group_verification"
            android:gravity="left|center"
            style="@style/CreateGroupTypeEdit"
            android:drawableLeft="@mipmap/image_all_check"/>

        <ImageView
            android:id="@+id/text_group_verification"
            android:src="@mipmap/wt_group_vertify"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/text_group_password" />

        <TextView
            android:id="@+id/text_channel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备备用频道1  "
            android:layout_marginTop="17dp"
            android:textSize="18sp"
            android:layout_below="@id/text_group_verification"
            android:layout_alignLeft="@id/text_group_autograph"/>

        <Spinner
            android:id="@+id/spinner_channel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/spingar_channel"
            android:layout_marginTop="10dp"
            android:layout_below="@id/text_group_verification"
            android:layout_toRightOf="@id/text_channel1"
            android:layout_marginRight="12dp"/>

        <TextView
            android:id="@+id/text_channel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备备用频道2  "
            android:layout_marginTop="17dp"
            android:textSize="18sp"
            android:layout_below="@id/spinner_channel1"
            android:layout_alignLeft="@id/text_group_autograph"/>

        <Spinner
            android:id="@+id/spinner_channel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/spingar_channel"
            android:layout_marginTop="10dp"
            android:layout_below="@id/spinner_channel1"
            android:layout_toRightOf="@id/text_channel2"
            android:layout_marginRight="12dp"/>

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="确定"
            android:textSize="18sp"
            android:layout_below="@id/spinner_channel2"
            android:textColor="@color/WHITE"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/wt_commit_button_background"/>

    </RelativeLayout>

</LinearLayout>
