<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dinglan_orange"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <include android:id="@+id/include_title" layout="@layout/base_activity_title"/>

    <LinearLayout
        android:id="@+id/lin_find_password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wt_edittext_default_high"
            android:layout_marginLeft="@dimen/wt_login_default_margin_left"
            android:layout_marginRight="@dimen/wt_login_default_margin_right"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_edittext_normal"
            android:gravity="center"
            android:padding="5dip" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="19dp"
                android:src="@mipmap/img_telephone" />

            <EditText
                android:id="@+id/edittext_userphone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/WHITE"
                android:hint="手机号"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="@color/wt_login_third"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/wt_edittext_cursor"
                android:textSize="@dimen/wt_edittext_default_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wt_edittext_default_high"
            android:layout_marginLeft="@dimen/wt_login_default_margin_left"
            android:layout_marginRight="@dimen/wt_login_default_margin_right"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_edittext_normal"
            android:gravity="center"
            android:padding="5dip" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="19dp"
                android:src="@mipmap/img_password" />

            <EditText
                android:id="@+id/edittext_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/WHITE"
                android:hint="密码"
                android:maxLength="18"
                android:password="true"
                android:singleLine="true"
                android:textColor="@color/wt_login_third"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/wt_edittext_cursor"
                android:textSize="@dimen/wt_edittext_default_text" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wt_edittext_default_high"
            android:layout_marginLeft="@dimen/wt_login_default_margin_left"
            android:layout_marginRight="@dimen/wt_login_default_margin_right"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_edittext_normal">

            <ImageView
                android:id="@+id/image_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="19dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/wt_group_vertify" />

            <EditText
                android:id="@+id/et_yzm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="2dp"
                android:background="@color/WHITE"
                android:layout_toRightOf="@id/image_code"
                android:hint="验证码"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/wt_login_third"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/wt_edittext_cursor"
                android:textSize="@dimen/wt_edittext_default_text" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/tv_cxfasong"
                android:background="@color/gray_z" />

            <TextView
                android:id="@+id/tv_getyzm"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/et_bg_yanzhengma"
                android:gravity="center"
                android:singleLine="true"
                android:text="获取验证码"
                android:layout_alignParentRight="true"
                android:textColor="@color/WHITE"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_cxfasong"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:text="重新发送"
                android:textColor="@color/gray"
                android:textSize="10sp"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/wt_login_default_margin_left"
            android:layout_marginRight="@dimen/wt_login_default_margin_right"
            android:layout_marginTop="36dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wt_button_default_high"
                android:background="@drawable/zhuxiao_press"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/wt_button_default_text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wt_button_default_high"
                android:background="@drawable/bg_graybutton"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/wt_button_default_text" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>