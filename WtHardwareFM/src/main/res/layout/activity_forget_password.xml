<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dinglan_orange"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/include_title"
        layout="@layout/base_activity_title" />

    <LinearLayout
        android:id="@+id/lin_find_password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wt_edittext_default_high"
            android:layout_marginLeft="@dimen/wt_login_default_margin_left"
            android:layout_marginRight="@dimen/wt_login_default_margin_right"
            android:layout_marginTop="15dp"

            android:gravity="center"
            android:padding="5dip">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="手  机  号" />

            <EditText
                android:id="@+id/edittext_userphone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/bg_edittext_normal"
                android:hint="请输入手机号"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="@color/wt_login_third"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/wt_edittext_cursor"
                android:textSize="@dimen/wt_edittext_default_text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wt_edittext_default_high"
            android:layout_marginLeft="@dimen/wt_login_default_margin_left"
            android:layout_marginRight="@dimen/wt_login_default_margin_right"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:padding="5dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="新  密  码" />

            <EditText
                android:id="@+id/edittext_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_edittext_normal"
                android:hint="请输入至少6位新密码"
                android:maxLength="18"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:password="true"
                android:singleLine="true"
                android:textColor="@color/wt_login_third"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/wt_edittext_cursor"
                android:textSize="@dimen/wt_edittext_default_text" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wt_edittext_default_high"
            android:layout_marginLeft="@dimen/wt_login_default_margin_left"
            android:layout_marginRight="@dimen/wt_login_default_margin_right"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:padding="5dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="确认密码" />

            <EditText
                android:id="@+id/edittext_passwordT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_edittext_normal"
                android:hint="请再次输入相同密码"
                android:maxLength="18"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:password="true"
                android:singleLine="true"
                android:textColor="@color/wt_login_third"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/wt_edittext_cursor"
                android:textSize="@dimen/wt_edittext_default_text" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/wt_login_default_margin_left"
            android:layout_marginRight="@dimen/wt_login_default_margin_right"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_nameyzm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="验  证  码"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_yzm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wt_edittext_default_high"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@id/tv_nameyzm"
                android:background="@drawable/bg_edittext_normal"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="10dp"
                android:textColor="@color/wt_login_third"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/wt_edittext_cursor"
                android:textSize="@dimen/wt_edittext_default_text" />


            <TextView
                android:id="@+id/tv_getyzm"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/et_bg_yanzhengma"
                android:gravity="center"
                android:singleLine="true"
                android:text="获取验证码"
                android:textColor="@color/WHITE"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_cxfasong"
                android:layout_width="79dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="重新发送"
                android:textColor="@color/gray"
                android:textSize="10sp"
                android:visibility="invisible" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="38dp"
                android:layout_toLeftOf="@id/tv_cxfasong"
                android:background="@color/gray_z" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/wt_login_default_margin_left"
            android:layout_marginRight="@dimen/wt_login_default_margin_right"
            android:layout_marginTop="36dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wt_button_default_high"
                android:background="@drawable/zhuxiao_press"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/wt_button_default_text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wt_button_default_high"
                android:background="@drawable/bg_graybutton"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/WHITE"
                android:textSize="@dimen/wt_button_default_text" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>