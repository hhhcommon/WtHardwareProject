<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_pair_device"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/linkman_bt"
        android:textSize="14sp"
        android:text="已配对的设备"
        android:gravity="center_vertical"
        android:paddingLeft="14dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:layout_below="@id/text_pair_device"
        android:background="@drawable/person_color">

        <ImageView
            android:id="@+id/image_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/text_bluebooth_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:layout_toRightOf="@id/image_device"
            android:layout_marginLeft="6dp"
            android:background="@drawable/background_bluetooth_text"
            android:padding="10dp"
            android:text="蓝牙名称"/>

        <Button
            android:id="@+id/btn_cancel_pair"
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:text="取消配对"
            android:background="@drawable/background_bluetooth_text"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

</RelativeLayout>