<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/WHITE"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center"
            android:lineSpacingExtra="3dp"
            android:text="消息内容"
            android:textColor="@color/wt_login_third"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="19dp"/>
        
        <TextView
            android:id="@+id/text_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您有未处理的对讲消息"
            android:textSize="13sp"
            android:textColor="@color/beijing"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="17dp"/>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dinglan_orange"
            android:layout_marginTop="22dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_qx"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/group_4b"
                android:textSize="16sp" />
            
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/dinglan_orange"/>

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="继续"
                android:textColor="@color/dinglan_orange"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>