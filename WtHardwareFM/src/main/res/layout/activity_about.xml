<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BaseStyle"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <ImageView
            android:id="@+id/head_left_btn"
            style="@style/LeftImageStyle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我听"
            android:layout_centerInParent="true"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/activity_head_center_s" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@mipmap/app_logo" />

        <TextView
            android:id="@+id/text_woting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="我听我享听"
            android:layout_centerHorizontal="true"
            android:textColor="@color/wt_login_third"
            android:layout_below="@id/image_logo"
            android:textSize="@dimen/activity_head_right" />

        <TextView
            android:id="@+id/tv_verson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="V 0.1.0"
            android:layout_below="@id/text_woting"
            android:layout_centerHorizontal="true"
            android:textColor="@color/wt_login_third"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="woting.com"
            android:layout_above="@+id/text_wt"
            android:layout_centerHorizontal="true"
            android:textColor="@color/beijing"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/text_wt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:text="©我听科技"
            android:layout_marginBottom="44dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/beijing"
            android:textSize="@dimen/text_size_10" />

    </RelativeLayout>

</LinearLayout>