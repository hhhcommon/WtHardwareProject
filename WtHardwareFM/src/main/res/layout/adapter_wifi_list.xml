<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="68dp"
      android:background="@drawable/person_color">

    <TextView
        android:id="@+id/text_wifi_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="WiFi Name"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="14dp"
        android:textSize="16sp"
        android:layout_marginLeft="14dp"
        android:layout_toLeftOf="@+id/image_wifi"
        android:gravity="center|left"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/text_wifi_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通过WPA/WPA2进行保护"
        android:textSize="14sp"
        android:layout_marginLeft="14dp"
        android:layout_below="@id/text_wifi_name"/>

    <ImageView
        android:id="@+id/image_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"/>

</RelativeLayout>