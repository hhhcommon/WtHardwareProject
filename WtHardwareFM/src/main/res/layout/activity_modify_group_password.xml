<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dinglan_orange"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/wt_back"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="@color/WHITE"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改群密码"
            android:textColor="@color/WHITE"
            android:layout_centerInParent="true"
            android:textSize="@dimen/activity_head_center_s" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:gravity="left|center"
            android:orientation="horizontal"
            android:padding="5dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="旧  密  码"
                android:textColor="@color/wt_login_third"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_oldpassword"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_normal"
                android:ems="10"
                android:hint="请输入当前群密码"
                android:paddingLeft="10dp"
                android:password="true"
                android:singleLine="true"
                android:textColor="@color/wt_login_third"
                android:textColorHint="@color/beijing"
                android:textCursorDrawable="@drawable/wt_edittext_cursor"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="5dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新  密  码"
                android:textColor="@color/wt_login_third"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_newpassword"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext_normal"
                android:ems="10"
                android:hint="请输入新的群密码"
                android:paddingLeft="10dp"
                android:password="true"
                android:singleLine="true"
                android:textColor="@color/wt_login_third"
                android:textColorHint="@color/beijing"
                android:textCursorDrawable="@drawable/wt_edittext_cursor"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="5dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密码"
                android:textColor="@color/wt_login_third"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_confirmpassword"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:background="@drawable/bg_edittext_normal"
                android:ems="10"
                android:hint="请再次输入密码"
                android:password="true"
                android:singleLine="true"
                android:textColor="@color/wt_login_third"
                android:textColorHint="@color/beijing"
                android:textCursorDrawable="@drawable/wt_edittext_cursor"
                android:textSize="@dimen/activity_head_right" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_modifypassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/d_btn_background"
            android:enabled="false"
            android:text="确定"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/activity_head_right"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"/>

    </LinearLayout>

</LinearLayout>