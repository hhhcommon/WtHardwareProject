<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BaseStyle"
    android:orientation="vertical" >

    <include android:id="@+id/include_title" layout="@layout/base_activity_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dinglan_orange"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/image_touxiang"
                android:layout_width="85dip"
                android:layout_height="85dip"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="85dip"
                android:layout_height="85dip"
                android:layout_centerInParent="true"
                android:src="@mipmap/liubianxing_orange" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:text="我听科技"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/wt_group_detail_16" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="100001"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/wt_login_text_wjmm" />

        <TextView
            android:id="@+id/tv_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="11dp"
            android:ellipsize="end"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="不忘初心，方得始终"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/wt_login_text_wjmm" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lin_ewm"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/wt_person_color"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dip"
            android:text="二维码"
            android:textColor="@color/gray" />

        <ImageView
            android:id="@+id/imageView_ewm"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/ewm"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WHITE"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linear_item"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_edittext_normal"
            android:gravity="center"
            android:padding="5dp">

            <EditText
                android:id="@+id/et_news"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/WHITE"
                android:ellipsize="end"
                android:ems="10"
                android:padding="1dp"
                android:hint="请输入验证信息"
                android:singleLine="true"
                android:textColor="@color/beijing"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/wt_edittext_cursor"
                android:textSize="@dimen/wt_login_text_wjmm" />

            <ImageView
                android:id="@+id/clear_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wt_img_clearnew" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_mm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_edittext_normal"
            android:layout_below="@id/linear_item"
            android:visibility="gone"
            android:padding="5dp">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/WHITE"
                android:ems="10"
                android:hint="群密码"
                android:padding="1dp"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/wt_login_third"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/wt_edittext_cursor"
                android:textSize="@dimen/wt_edittext_default_text" />
        </LinearLayout>

        <Button
            android:id="@+id/tv_add"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/zhuxiao_press"
            android:text="添加该群"
            android:textColor="@color/WHITE"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:textSize="@dimen/wt_button_default_text" />

    </RelativeLayout>

</LinearLayout>