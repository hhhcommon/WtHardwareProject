<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dinglan_orange"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择几个你喜欢的节目类型"
            android:textColor="@color/WHITE"
            android:textSize="17sp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/text_skip"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:textSize="16sp"
            android:text="跳过"
            android:textColor="@color/WHITE"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WHITE">

        <ImageView
            android:id="@+id/image_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/view_literature"
            android:layout_width="67dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="38dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="爱文艺"
            android:textColor="@color/up_bg_unselected"
            android:layout_toLeftOf="@id/view_literature"
            android:layout_alignBottom="@id/view_literature"
            android:layout_marginBottom="7dp"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/view_life"
            android:layout_width="62dp"
            android:layout_height="60dp"
            android:layout_toLeftOf="@id/view_literature"
            android:layout_below="@id/view_literature"
            android:layout_marginRight="6dp"
            android:layout_marginTop="35dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会生活"
            android:textColor="@color/up_bg_unselected"
            android:layout_toLeftOf="@id/view_life"
            android:layout_alignTop="@id/view_life"
            android:layout_marginTop="2dp"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/view_joke"
            android:layout_width="68dp"
            android:layout_height="60dp"
            android:layout_alignTop="@id/view_life"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="33dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="讲笑话"
            android:textColor="@color/up_bg_unselected"
            android:layout_marginLeft="33dp"
            android:layout_alignBottom="@id/view_joke"
            android:layout_marginBottom="17dp"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/view_world"
            android:layout_width="68dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/view_life"
            android:layout_marginRight="120dp"
            android:layout_marginTop="38dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="看世界"
            android:textColor="@color/up_bg_unselected"
            android:layout_alignTop="@id/view_world"
            android:layout_alignParentRight="true"
            android:layout_marginRight="78dp"
            android:layout_marginTop="20dp"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/view_story"
            android:layout_width="68dp"
            android:layout_height="60dp"
            android:layout_below="@id/view_world"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="听故事"
            android:textColor="@color/up_bg_unselected"
            android:layout_alignBottom="@id/view_story"
            android:layout_marginLeft="28dp"
            android:layout_marginBottom="7dp"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/view_knowledge"
            android:layout_width="63dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="46dp"
            android:layout_marginTop="93dp"
            android:layout_below="@id/view_world"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="涨知识"
            android:textColor="@color/up_bg_unselected"
            android:layout_alignBottom="@id/view_knowledge"
            android:layout_toLeftOf="@id/view_knowledge"
            android:layout_marginBottom="3dp"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/view_taste"
            android:layout_width="47dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="144dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/view_knowledge"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有情趣"
            android:textColor="@color/up_bg_unselected"
            android:layout_alignBottom="@id/view_taste"
            android:layout_alignParentRight="true"
            android:layout_marginRight="102dp"
            android:layout_marginBottom="3dp"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btn_finish"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="确定"
            android:textSize="16sp"
            android:textColor="@color/WHITE"
            android:layout_alignParentBottom="true"
            android:enabled="false"
            android:layout_margin="10dp"
            android:background="@drawable/d_btn_background"/>

    </RelativeLayout>

</LinearLayout>
