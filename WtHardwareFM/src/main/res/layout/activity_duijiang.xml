<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dinglan_orange"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/dinglan_orange"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/lin_news"
            style="@style/LeftImageStyle"
            android:src="@mipmap/news"
            android:layout_marginLeft="6dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_guid1"
                android:layout_width="81dp"
                android:layout_height="28dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/color_wt_circle_home_white"
                android:gravity="center"
                android:text="聊 天"
                android:textColor="@color/dinglan_orange"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_guid2"
                android:layout_width="81dp"
                android:layout_height="28dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/color_wt_circle_orange"
                android:gravity="center"
                android:text="通讯录"
                android:textColor="@color/WHITE"
                android:textSize="15sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/lin_more"
            style="@style/LeftImageStyle"
            android:src="@mipmap/wt_more_white"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:flipInterval="30"
            android:persistentDrawingCache="animation"/>

    </RelativeLayout>

</LinearLayout>